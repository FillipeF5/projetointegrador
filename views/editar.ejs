<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head') %>


    <body>
        <header>
            <div class="header-admin">
                <div class="company-name">
                    <h5>DH Tech admin</h5>
                </div>

                <div class="admin-search-top">
                    <input type="search" placeholder="Search">
                </div>
            </div>
        </header>

        <main class="dashboard">

            <div class="nav-lateral">

                <div class="links-lateral">
                    <ul>
                        <li><a href="/dashboard">Home</a></li>
                        <li><a href="/dashboard/usuarios">Clients</a></li>
                        <li><a href="/dashboard/produtos">Products</a></li>
                    </ul>
                </div>
            </div>

            <div class="row-fluid">

                <div class="row-container">
                    <h4>Editando produtos</h4>

                    <form action="/dashboard/produtos/<%= produto.id %>/editar?_method=PUT" method="POST">
                        <!-- titulo -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" for="title" id="basic-addon1">Título</span>
                            <input type="text" name="titulo" value="<%= produto.titulo %>" class="form-control"
                                placeholder="titulo" aria-label="Titulo" aria-describedby="basic-addon1">
                        </div>
                        <!-- cor -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Cor</span>
                            <input type="text" name="cor" value="<%= produto.cor %>" class="form-control"
                                placeholder="cor" aria-label="Cor" aria-describedby="basic-addon1">
                        </div>
                        <!-- preco -->
                        <div class="input-group mb-3">
                            <span class="input-group-text">R$</span>
                            <input type="text" value="<%= produto.preco %>" name="preco" class="form-control"
                                placeholder="preço">
                            <span class="input-group-text">,00</span>
                        </div>
                        <!-- tela -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Tela</span>
                            <input type="text" value="<%= produto.tela %>" name="tela" class="form-control"
                                placeholder="tela" aria-label="tela" aria-describedby="basic-addon1" required>
                        </div>
                        <!-- os -->
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">O.S</label>
                            <select name="os" value="" class="form-select" id="inputGroupSelect01" required>
                                <option selected disabled></option>
                                <option value="iOS">iOS</option>
                                <option value="Android">Android</option>
                                <option value="Outro">Outro (descreva na box de "outras informações)"</option>
                            </select>
                        </div>
                        <!-- memoria -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">Memoria</span>
                            <input type="text" value="<%= produto.memoria %>" name="memoria" class="form-control"
                                placeholder="memoria" aria-label="memoria sd" aria-describedby="basic-addon1">
                        </div>
                        <!-- provadagua -->
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">A prova d'agua?</label>
                            <select name="provadagua" value="<%= produto.provadagua %>" class="form-select"
                                id="inputGroupSelect01" required>
                                <option selected disabled></option>
                                <option value="Sim">Sim</option>
                                <option value="Não">Não</option>
                            </select>
                        </div>
                        <!-- descricao -->
                        

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <a class="btn btn-primary" role="button" href="/dashboard/produtos">Fechar</a>
                        </div>
                    </form>

                </div>

            </div>


        </main>

        <!-- <%- include('./partials/footer') %>  -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    </body>

</html>