<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

      <main>

        <div class="container-fluid">

          <section class="section-pesquisa">
            <div class="caixa-pesquisa">
              <input type="search" placeholder="Find Products">
              <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor"
                  class="bi bi-search" viewBox="0 0 16 16">
                  <path
                      d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
              </svg>
          </div>
          </section>

          <section class="card-section">

            <div class="conteudo-cards">

              <% produtos.forEach(produto=> { %>
                
                <div class="card" style="width: 17rem;">
                  <img src="<%= produto.imagem %>" class="card-img-top" alt="" />

                  <div class="card-body">
                    <h5 class="card-title">
                      <%= produto.titulo %> - <%= produto.cor %>
                    </h5>
                    <p class="card-price"><%= produto.preco %>
                    </p>
                    <div class="card-text">
                      <p>
                        <%= produto.descricao %>
                      </p>
                    </div>
                    <a href="/produto/<%= produto.id %>" class="btn btn-primary">Ver produto</a>
                  </div>

                </div>
                <% }) %>

            </div>
          </section>

        </div>

      </main>

      <%- include('./partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
          crossorigin="anonymous"></script>
  </body>

</html>