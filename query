DROP DATABASE IF EXISTS dh_tech;
CREATE DATABASE dh_tech;
USE dh_tech;

CREATE TABLE `cliente` (
  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `nome` varchar(200) NOT NULL,
  `email` varchar(70) NOT NULL,
  `nascimento` int(10) NOT NULL,
  `genero` varchar(10) NOT NULL,
  PRIMARY KEY (`id`)
) CHARSET=utf8 COLLATE=utf8_unicode_ci;

CREATE TABLE `produto` (
  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `title` varchar(200) NOT NULL,
  `color` varchar(45) NOT NULL,
  `price` int NOT NULL,
  `tela` decimal(2,1) NOT NULL,
  `os` varchar(10) NOT NULL,
  `memoria` int(10) NOT NULL,
  `waterproof` varchar(10) NOT NULL,
  `description` varchar(200) NOT NULL,
  `foto` blob NOT NULL,
  PRIMARY KEY (`id`)
) CHARSET=utf8 COLLATE=utf8_unicode_ci;

CREATE TABLE `categoria` (
	`id` int(10) unsigned NOT NULL AUTO_INCREMENT,
    `nome` varchar(45) NOT NULL,
    PRIMARY KEY (`id`)
)	DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci;

CREATE TABLE `carrinho` (
	`id` int(10) unsigned NOT NULL AUTO_INCREMENT,
    PRIMARY KEY (`id`)
)	DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci;

CREATE TABLE `pedido` (
	`id` int(10) unsigned NOT NULL AUTO_INCREMENT,
    `cliente_id` int(10) unsigned NOT NULL,
    `carrinho_id` int(10) unsigned NOT NULL,
    PRIMARY KEY (`id`),
    FOREIGN KEY cliente_foreing (cliente_id) REFERENCES cliente(id)
)	DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci;